{
  "private": true,
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "npm run build -ws --if-present",
    "lint": "run-s -l lint:*",
    "lint:eslint": "eslint . --ext=ts,tsx,vue",
    "lint:pkg": "npm run lint -ws --if-present",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{ts,tsx}'",
    "test": "npm run test -ws --if-present"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  },
  "eslintConfig": {
    "extends": [
      "@9renpoto/eslint-config-react",
      "@9renpoto/eslint-config-typescript"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "deno fmt"
    ],
    "*.md": [
      "deno fmt",
      "textlint --fix"
    ],
    "*.{ts,tsx}": [
      "deno fmt",
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint --fix"
    ]
  },
  "stylelint": {
    "extends": [
      "@9renpoto/stylelint-config"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
