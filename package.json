{
  "private": true,
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "lerna run build --include-dependencies",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "eslint . --ext=ts,tsx,vue",
    "lint:md": "remark .",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{js,jsx,ts,tsx,gql,graphql,vue}'",
    "lint:style": "stylelint --syntax css-in-js '{packages,apps}/**/*.{tsx,vue}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@prettier/plugin-pug": "1.18.0",
    "@types/jest": "27.0.3",
    "babel-loader": "8.2.3",
    "can-npm-publish": "1.3.6",
    "cpx": "1.5.0",
    "cypress": "9.1.1",
    "doctoc": "2.1.0",
    "eslint": "7.32.0",
    "eslint-plugin-jest": "25.3.0",
    "husky": "7.0.4",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lerna-changelog": "2.2.0",
    "lint-staged": "12.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-elm": "0.8.0",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-package": "1.3.0",
    "remark-cli": "10.0.1",
    "remark-preset-lint-recommended": "6.1.2",
    "rimraf": "3.0.2",
    "stylelint-config-styled-components": "0.1.1",
    "ts-jest": "26.5.6",
    "ts-loader": "8.3.0",
    "ts-node": "10.4.0"
  },
  "resolutions": {
    "react": "npm:@preact/compat@^17.0.0",
    "react-dom": "npm:@preact/compat@^17.0.0",
    "typescript": "4.5.3"
  },
  "eslintConfig": {
    "extends": [
      "@9renpoto/eslint-config-react",
      "@9renpoto/eslint-config-typescript",
      "@9renpoto/eslint-config-nuxt"
    ],
    "plugins": [
      "jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,graphql,css,scss,json,toml,elm,pug,svelte}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "remark"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint --fix"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended"
    ]
  },
  "stylelint": {
    "extends": [
      "@9renpoto/stylelint-config",
      "stylelint-config-styled-components"
    ]
  },
  "workspaces": [
    "packages/*",
    "sandbox/*",
    "apps/*"
  ]
}
