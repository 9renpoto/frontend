{
  "private": true,
  "license": "https://github.com/9renpoto/frontend/blob/master/LICENSE",
  "repository": "ssh://git@github.com/9renpoto/frontend.git",
  "scripts": {
    "build": "lerna run build --include-dependencies",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "eslint . --ext=ts,tsx,vue",
    "lint:md": "remark .",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check './{packages,sandbox,apps}/**/*.{ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "2.4.1",
    "can-npm-publish": "1.3.6",
    "eslint": "8.34.0",
    "husky": "8.0.3",
    "lerna": "6.4.1",
    "lerna-changelog": "2.2.0",
    "lint-staged": "13.1.2",
    "npm-run-all": "4.1.5",
    "prettier-plugin-organize-imports": "3.2.2",
    "prettier-plugin-package": "1.3.0",
    "remark-cli": "11.0.0",
    "remark-preset-lint-recommended": "6.1.2",
    "rimraf": "4.1.2"
  },
  "eslintConfig": {
    "extends": [
      "@9renpoto/eslint-config-react",
      "@9renpoto/eslint-config-typescript"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,graphql,css,scss,json,pug}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "remark"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint --fix"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended"
    ]
  },
  "stylelint": {
    "extends": [
      "@9renpoto/stylelint-config"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
